{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "commonjs",
        "lib": ["es6"],
        "outDir": "lib",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "suppressImplicitAnyIndexErrors": true,
    }
}